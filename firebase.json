{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "runtime": "nodejs18",
      "memory": "256MB",
      "timeoutSeconds": 60
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "function": "app"
      },
      {
        "source": "/playlists",
        "function": "playlists"
      },
      {
        "source": "/history",
        "function": "history"
      },
      {
        "source": "/newartists",
        "function": "newartists"
      },
      {
        "source": "/settings",
        "function": "settings"
      },
      {
        "source": "/test",
        "function": "test"
      }
    ]
  },
  "functions": {
    "source": "functions"
  }
}
